// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  googleId  String   @unique // Google OAuth ID
  email     String   @unique
  name      String
  avatar    String? // Profile picture URL from Google
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  problems Problem[]

  @@map("users")
}

model Problem {
  id         Int      @id @default(autoincrement())
  imageData  String // Base64 encoded image data
  imageName  String? // Original filename
  mimeType   String // Image MIME type (image/jpeg, image/png, etc.)
  question   String? // Student's specific question (optional)
  aiResponse String // AI-generated response/explanation
  rating     String? // User feedback: 'thumbs_up', 'thumbs_down', or null
  subject    String? // Problem subject/topic classification
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // User relationship - every problem belongs to a user
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("problems")
} 